{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/lightning-api/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/lightning-api/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/lightning-api",
  "projects": {
    "lightning-api": {
      "type": "application",
      "root": "apps/lightning-api",
      "entryFile": "main",
      "sourceRoot": "apps/lightning-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/lightning-api/tsconfig.app.json"
      }
    },
    "auth-api": {
      "type": "application",
      "root": "apps/auth-api",
      "entryFile": "main",
      "sourceRoot": "apps/auth-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-api/tsconfig.app.json"
      }
    },
    "schemes": {
      "type": "library",
      "root": "libs/schemes",
      "entryFile": "index",
      "sourceRoot": "libs/schemes/src",
      "compilerOptions": {
        "tsConfigPath": "libs/schemes/tsconfig.lib.json"
      }
    },
    "lightning-rpc": {
      "type": "library",
      "root": "libs/lightning-rpc",
      "entryFile": "index",
      "sourceRoot": "libs/lightning-rpc/src",
      "compilerOptions": {
        "tsConfigPath": "libs/lightning-rpc/tsconfig.lib.json"
      }
    }
  }
}